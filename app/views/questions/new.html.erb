<h1>New question</h1>

<%= form_with model: @question do |f| %>
  
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title"  %>
  </div>
  <br>
  <!--
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  -->
  
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, size: "50x5", required: true, minlength: 2 %>
  </div>
  <br>
  <%= f.submit "Submit question!" %>
<% end %>